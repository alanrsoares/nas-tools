{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "node16",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "resolveJsonModule": true,
    "noEmit": false,
    "outDir": "./dist",
    "downlevelIteration": true,
    "types": ["bun"],
    "verbatimModuleSyntax": true,
    "useUnknownInCatchVariables": true
  },
  "include": ["cli/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/__tests__/**"
  ]
}
